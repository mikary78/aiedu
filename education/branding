    <script>
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };

        const aiSkillsCtx = document.getElementById('aiSkillsChart').getContext('2d');
        new Chart(aiSkillsCtx, {
            type: 'radar',
            data: {
                labels: ['자료 분석', '창의적 글쓰기', '아이디어 발상', '그림 그리기', '전략 수립'],
                datasets: [{
                    label: 'NotebookLM (탐정)',
                    data: [5, 2, 2, 0, 4],
                    fill: true,
                    backgroundColor: 'rgba(109, 126, 123, 0.2)',
                    borderColor: '#6D7E7B',
                    pointBackgroundColor: '#6D7E7B',
                }, {
                    label: 'Gemini (작가)',
                    data: [4, 5, 5, 1, 5],
                    fill: true,
                    backgroundColor: 'rgba(249, 168, 136, 0.2)',
                    borderColor: '#F9A888',
                    pointBackgroundColor: '#F9A888',
                }, {
                    label: 'Nano-Banana (화가)',
                    data: [0, 1, 3, 5, 1],
                    fill: true,
                    backgroundColor: 'rgba(163, 177, 173, 0.2)',
                    borderColor: '#A3B1AD',
                    pointBackgroundColor: '#A3B1AD',
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    r: {
                        angleLines: {
                            color: '#E0EBE8'
                        },
                        grid: {
                            color: '#E0EBE8'
                        },
                        suggestedMin: 0,
                        suggestedMax: 5,
                        pointLabels: {
                            font: { size: 12, weight: 'bold' },
                            color: '#3A4E48'
                        },
                        ticks: {
                           stepSize: 1,
                           backdropColor: 'rgba(255, 255, 255, 0.75)'
                        }
                    }
                },
                plugins: {
                    legend: {
                        labels: {
                             font: { weight: 'bold' }
                        }
                    },
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback
                        }
                    }
                }
            }
        });
    </script>
